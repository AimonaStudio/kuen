{
  "root": true,
  "parserOptions": {
    "parser": "typescript-eslint-parser",
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": [
    "standard",
    "plugin:vue/recommended"
  ],
  "plugins": [
    "typescript"
  ],
  "rules": {
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "typescript/class-name-casing": "error",
    "no-unused-vars": "warn"
  }
}
